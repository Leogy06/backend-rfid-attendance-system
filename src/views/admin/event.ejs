<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendance</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/event.css" />
    <!-- Font Awesome Cdn Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="containerCss">
      <nav>
        <ul>
          <li>
            <a href="#" class="logo">
              <img src="/img/SSC logo.png" />
              <span class="nav-item">SSC</span>
            </a>
          </li>
          <li>
            <a href="/admin/dashboard">
              <i class="fas fa-menorah"></i>
              <span class="nav-item">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/admin/attendance">
              <i class="fas fa-chart-bar"></i>
              <span class="nav-item">Attendance</span>
            </a>
          </li>
          <li>
            <a href="/admin/manageStudent">
              <i class="fas fa-user"></i>
              <span class="nav-item">Manage Student</span>
            </a>
          </li>
          <li>
            <a href="/admin/event" aria-current="page">
              <i class="fa-solid fa-calendar-days fas"></i>
              <span class="nav-item">Event</span>
            </a>
          </li>
          <li>
            <a href="#">
              <i class="fas fa-cog"></i>
              <span class="nav-item"> Setting</span>
            </a>
          </li>
          <li class="logout">
            <a href="#">
              <form action="/admin/logout?_method=DELETE" method="POST">
                <button type="submit">
                  <i class="fas fa-sign-out-alt"></i>
                  <span class="nav-item">Logout</span>
                </button>
              </form>
            </a>
          </li>
        </ul>
      </nav>

      <section class="main">
        <div class="main-top">
          <h2>Event</h2>
          <span
            ><form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
                id="searchInput"
                autocomplete="off"
              /></form
          ></span>
        </div>

        <section class="attendance">
          <div class="attendance-list">
            <div class="flex">
              <span class="btn-span">
                <button type="button" id="btn-event">Set Event</button>
              </span>
            </div>
            <table class="table">
              <div class="hidden text-bg-danger" id="error-table-render"></div>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Location</th>
                  <th>Description</th>
                  <th>Time Begin</th>
                  <th>Time End</th>
                  <th>School Year</th>
                  <th>Operation</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </section>
      </section>

      <div
        id="event-container"
        class="position-absolute top-50 start-50 translate-middle hidden"
      >
        <span class="float-end justify-content-center"
          ><button
            class="btn btn-close"
            type="button"
            id="close-btn"
            aria-label="Close"
          ></button
        ></span>
        <h3 class="text-center mb-5">Set event</h3>
        <div
          class="alert alert-warning text-center"
          role="alert"
          id="alertâ€”check"
        >
          dwqd
        </div>
        <form method="post" id="event">
          <div class="row row-cols-2 position-relative">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="title"
                placeholder="Intramurals"
                name="title"
              />
              <label for="title" class="ms-2">Title</label>
            </div>
            <div class="form-floating">
              <input
                type="text"
                class="form-control"
                id="location"
                placeholder="Location"
                name="location"
              />
              <label for="location" class="ms-2">Location</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control"
                id="startingSchoolYear"
                placeholder="YYYY"
                name="startingSchoolYear"
                min="2020"
                max="2100"
              />
              <label for="startingSchoolYear" class="ms-2"
                >Starting School year (e.g., 2023)</label
              >
            </div>
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="endingSchoolYear"
                placeholder="2023"
                name="endingSchoolYear"
              />
              <label for="endingSchoolYear" class="ms-2"
                >Starting School year (e.g., 2024)</label
              >
            </div>
            <div class="form-floating mb-3">
              <input
                type="date"
                class="form-control"
                id="timeBegin"
                placeholder="2023"
                name="timeBegin"
              />
              <label for="timeBegin" class="ms-2">Time begin</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="date"
                class="form-control"
                id="timeEnd"
                placeholder="2023"
                name="timeEnd"
              />
              <label for="timeEnd" class="ms-2">Time end</label>
            </div>
          </div>
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Leave a comment here"
              id="floatingTextarea"
              name="description"
            ></textarea>
            <label for="floatingTextarea" class="ms-1">Description</label>
          </div>
          <div class="row cols-1 mx-5 mt-3" id="btn-event-container">
            <button type="submit" class="btn btn-success" id="btn-create-event">
              Create
            </button>
          </div>
        </form>
      </div>
    </div>
    <script src="/js/event.js"></script>
  </body>
</html>
